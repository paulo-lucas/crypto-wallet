<p id="notice"><%= notice %></p>

<div class="bg-secondary text-light p-4 rounded">
  <h1><%= Coin.model_name.human(count: @coins.count) %></h1>

  <table class="table table-hover text-light">
    <thead>
      <tr>
        <th>Description</th>
        <th>Acronym</th>
        <th>Logo</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @coins.each do |coin| %>
        <tr>
          <td><%= coin.description %></td>
          <td><%= coin.acronym %></td>
          <td><%= image_tag coin.url_image, size: "40x40" %></td>
          <td><%= link_to t('actions.show'), coin %></td>
          <td><%= link_to t('actions.edit'), edit_coin_path(coin) %></td>
          <td><%= link_to t('actions.delete'), coin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Coin', new_coin_path, class: "btn btn-primary" %>

</div>